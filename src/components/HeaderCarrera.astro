---
import {IconArrowLeft} from "@tabler/icons-react";

interface Props {
    carrera: string
    emoji: string
}

const {carrera, emoji} = Astro.props
const NombreCarrera = carrera.replace(/-/g, " ");
---

<header 
    transition:name=`header-${carrera}`
    class=`rounded-full border border-outline p-3 flex flex-row gap-2.5 items-center justify-start self-stretch shrink-0 relative overflow-hidden`
    style={{
		background: `linear-gradient(to right, var(--carrera-${carrera}) 25%, transparent)`,}}
    >

    <md-filled-icon-button href="/">
        <IconArrowLeft size={24}/>
    </md-filled-icon-button>
    <h2 class="text-on-background text-headline-small relative flex-1 flex items-center justify-center text-center">
        {NombreCarrera}
    </h2>
    <div class="bg-surface-variant rounded-full p-3 flex flex-row gap-2.5 items-center justify-center shrink-0 w-10 h-10 relative">
        <div class="text-on-primary text-center text-title-medium relative flex items-center justify-center">
            {emoji}
        </div>
    </div>
</header>